<h3 class="text-2xl font-bold mb-4 block">Listo para trabajar con socket</h3>
<div class="flex flex-wrap">

    <div class="w-full md:w-1/2 lg:w-1/3">
        <div class="bg-white rounded-lg shadow p-4">
            <form id="productForm">
                <fieldset>
                    <legend class="text-lg font-bold">Agregar producto nuevo</legend>

                    <div class="my-2">
                        <label class="font-bold" for="title">Título:</label>
                        <input type="text" id="title" name="title" required class="border border-gray-300 rounded-md px-2 py-1"/>
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="description">Descripción:</label>
                        <textarea id="description" name="description" required class="border border-gray-300 rounded-md px-2 py-1"></textarea>
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="price">Precio:</label>
                        <input type="number" id="price" name="price" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="code">Código:</label>
                        <input type="text" id="code" name="code" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="thumbnail">Imagen:</label>
                        <input type="text" id="thumbnail" name="thumbnail" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="stock">Stock:</label>
                        <input type="number" id="stock" name="stock" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="category">Categoría:</label>
                        <input type="text" id="category" name="category" required class="border border-gray-300 rounded-md px-2 py-1" />
                    </div>

                    <div class="my-2">
                        <label class="font-bold" for="status">Estado:</label>
                        <select id="status" name="status" required class="border border-gray-300 rounded-md px-2 py-1">
                            <option value="available">Disponible</option>
                            <option value="out_of_stock">Agotado</option>
                        </select>
                    </div>

                    <div class="my-2">
                        <button type="submit" id="createProductButton">Crear Producto</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="w-full md:w-1/2 lg:w-1/3">
        <div class="bg-white rounded-lg shadow p-4 mt-4">
            <form id="deleteProdForm">
                <fieldset>
                    <legend class="text-lg font-bold">Eliminar un producto por ID</legend>

                    <div class="my-2">
                        <label class="font-bold" for="title">ID del producto a eliminar:</label>
                        <input type="text" id="pid" name="title" required class="border border-gray-300 rounded-md px-2 py-1"/>
                    </div>
                    <div class="my-2">
                        <button type="submit" id="deleteProductButton" class="bg-red-500 text-white rounded-md px-4 py-2">Eliminar Producto</button>
                    </div>
                </fieldset>
        </div>
    </div>
    <div class="w-full">
        <div id="messageParagraph" class="bg-green-100 border border-green-500 text-green-800 px-4 py-2 mt-4 rounded-lg">
            
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/test-socket.js"></script>